<view class="container">
  <view class="navbar" style="opacity: {{opacity}}">
    <navbar navbarData="{{navbarData}}" Color="#000" />
  </view>
  <view class="header">
    <view class="header-search" style="width:{{capsuleObj.left-14-18}}px; height:{{capsuleObj.height}}px; top:{{capsuleObj.top}}px;">
      <i class="iconfont icon-search" style="font-size: 24rpx;" />
      <view class=" header-search-button ">寻找你喜欢的短剧</view>
    </view>
    <swiper indicator-dots autoplay class="swiper" indicator-active-color="#FB5196" circular>
      <block wx:for="{{background}}" wx:key="*this">
        <swiper-item>
          <image src="https://pic.rmb.bdstatic.com/bjh/news/dfc8c7b3aab3160325143a1336a215a4.jpeg" class="swiper-image" />
        </swiper-item>
      </block>
    </swiper>
